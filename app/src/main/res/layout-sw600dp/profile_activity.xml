<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/uploadedImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="200dp"
        app:civ_border_color="@color/common_google_signin_btn_text_dark_focused"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileTextView" />

    <TextView
        android:id="@+id/name"
        android:layout_width="645dp"
        android:layout_height="58dp"
        android:layout_marginTop="85dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileTextView" />

    <TextView
        android:id="@+id/profileTextView"
        android:layout_width="407dp"
        android:layout_height="74dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="238dp"
        android:layout_height="250dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="104dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileTextView">

        <TextView
            android:id="@+id/description_lp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_horizontal|center_vertical"
            android:text="Life points:"
            android:textAlignment="gravity"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/life_point"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/lp_bar"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="0 LP"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_xp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_horizontal|center_vertical"
            android:paddingRight="10dp"
            android:text="Experience points:"
            android:textAlignment="gravity"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/experience_point"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/xp_bar"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="0 XP"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/editImageView"
            android:layout_width="76dp"
            android:layout_height="65dp"
            android:clickable="true"
            app:srcCompat="@drawable/edit_profile" />

        <TextView
            android:id="@+id/editTextView"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Edit"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>